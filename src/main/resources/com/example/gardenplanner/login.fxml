<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" stylesheets="@style.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gardenplanner.LoginController">
    <Label styleClass="title-label" text="Apple Garden Login" />

    <VBox alignment="CENTER" spacing="10" styleClass="container">
        <Label styleClass="label" text="Email" />
        <TextField fx:id="emailField" promptText="Enter your email" styleClass="text-field" />

        <Label styleClass="label" text="Password" />
        <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="password-field" />

        <Button onAction="#loginUser" styleClass="button" text="Login" />
      <Hyperlink text="Don't have an account? Register Here" />
    </VBox>
</VBox>
